---
interface Props {
  name: string;
  description: string;
  url: string;
  highlights: string[];
}

const { name, description, url, highlights } = Astro.props;
---

<div class="border border-zinc-300 rounded-md p-3">
  <a href={url}>{name}</a>
  <p class="mb-10">{description}</p>

  {
    highlights.map((item) => {
      return (
        <span class="text-[10px] bg-zinc-200 p-1 rounded-lg text-wrap">
          {item}
        </span>
      );
    })
  }
</div>
