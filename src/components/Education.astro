---
import Certificates from "./Certificates.astro";
import Item from "./Item.astro";
import Section from "./Section.astro";
import Subtitle from "./Subtitle.astro";
import { education, certificates } from "@resume";
---

<Section>
  <Subtitle text="EducaciÃ³n" />
  {
    education.map((item) => {
      const { institution, studyType, startDate, endDate, area } = item;
      return (
        <Item
          company={institution}
          from={startDate}
          to={endDate}
          description={area}
        />
      );
    })
  }
  <h4 class="font-bold text-xl">Certificados</h4>
