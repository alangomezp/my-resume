---
interface Props {
  name: string;
  date: string;
  issuer: string;
  url: string;
}

const { name, date, issuer, url } = Astro.props;
---

<article class="my-2">
  <div class="flex justify-between">
    <h3 class="font-bold">{issuer}</h3>
    <span class="text-[14px] font-sans text-zinc-400">
      {`Expedido en: ${date.slice(0, 4)}`}
    </span>
  </div>
  <p>{name}</p>
</article>
